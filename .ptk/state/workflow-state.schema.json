{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Workflow State Schema",
  "description": "Schema for workflow execution state persistence",
  "type": "object",
  "required": ["workflow_id", "feature", "current_phase", "status", "started_at"],
  "properties": {
    "workflow_id": {
      "type": "string",
      "description": "Unique workflow identifier"
    },
    "feature": {
      "type": "string",
      "description": "Feature name"
    },
    "version": {
      "type": "string",
      "description": "Product version"
    },
    "current_phase": {
      "type": "string",
      "enum": ["think", "user-story", "prd", "test-case", "api-design", "release"],
      "description": "Current workflow phase"
    },
    "completed_phases": {
      "type": "array",
      "items": {"type": "string"}
    },
    "status": {
      "type": "string",
      "enum": ["in_progress", "completed", "blocked", "failed", "paused"],
      "description": "Workflow status"
    },
    "gate_status": {
      "type": "object",
      "properties": {
        "think": {"type": "string", "enum": ["pass", "warn", "blocked"]},
        "user-story": {"type": "string", "enum": ["pass", "warn", "blocked"]},
        "prd": {"type": "string", "enum": ["pass", "warn", "blocked"]},
        "test-case": {"type": "string", "enum": ["pass", "warn", "blocked"]},
        "release": {"type": "string", "enum": ["pass", "warn", "blocked"]}
      }
    },
    "outputs": {
      "type": "object",
      "additionalProperties": true,
      "description": "Phase outputs and artifacts"
    },
    "started_at": {
      "type": "string",
      "format": "date-time"
    },
    "updated_at": {
      "type": "string",
      "format": "date-time"
    },
    "completed_at": {
      "type": "string",
      "format": "date-time"
    }
  }
}
