{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Version History Schema",
  "description": "Schema for version evolution history persistence",
  "type": "object",
  "required": ["project", "versions"],
  "properties": {
    "project": {
      "type": "string",
      "description": "Project name"
    },
    "versions": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["version", "released_at"],
        "properties": {
          "version": {
            "type": "string",
            "pattern": "^\\d+\\.\\d+\\.\\d+$"
          },
          "type": {
            "type": "string",
            "enum": ["major", "minor", "patch", "hotfix"]
          },
          "changes": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "type": {"type": "string"},
                "description": {"type": "string"},
                "user_story": {"type": "string"},
                "prd": {"type": "string"},
                "test_cases": {"type": "integer"}
              }
            }
          },
          "user_stories_inherited": {
            "type": "array",
            "items": {"type": "string"}
          },
          "test_progress": {
            "type": "object",
            "properties": {
              "total": {"type": "integer"},
              "passed": {"type": "integer"},
              "failed": {"type": "integer"},
              "blocked": {"type": "integer"}
            }
          },
          "released_at": {
            "type": "string",
            "format": "date-time"
          },
          "notes": {"type": "string"}
        }
      }
    },
    "latest_version": {
      "type": "string"
    }
  }
}
