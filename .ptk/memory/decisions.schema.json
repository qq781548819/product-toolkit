{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Decisions Schema",
  "description": "Schema for historical decisions tracking",
  "type": "object",
  "required": ["decisions"],
  "properties": {
    "project": {
      "type": "string"
    },
    "decisions": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "title", "decision", "rationale", "decided_at"],
        "properties": {
          "id": {"type": "string"},
          "title": {"type": "string"},
          "decision": {"type": "string"},
          "rationale": {"type": "string"},
          "alternatives_considered": {
            "type": "array",
            "items": {"type": "string"}
          },
          "context": {"type": "string"},
          "decided_by": {"type": "string"},
          "decided_at": {"type": "string", "format": "date-time"},
          "status": {
            "type": "string",
            "enum": ["active", "superseded", "revoked"]
          },
          "superseded_by": {"type": "string"},
          "tags": {
            "type": "array",
            "items": {"type": "string"}
          }
        }
      }
    },
    "updated_at": {
      "type": "string",
      "format": "date-time"
    }
  }
}
